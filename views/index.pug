doctype HTML
html
	head
		meta(charset='UTF-8')
		title Dota 2 Tracker
		link(rel='stylesheet' type='text/css' href='/CSS/indexStyle.css')
	body
		div(id='heroMainContainer' class='mainContainer')
			div(id='heroListContainer' class='listContainer')
				each hero in heroes
					if !hero.name.includes('recipe') && !hero.name.includes('river')
						div(id='heroImageContainer' class='imgContainer')
							img(src='/images/'+hero.name+'.png' class='image')
			div(id='heroDescription' class='detailContainer')
		div(id='itemMainContainer' class='mainContainer')
			div(id='itemListContainer' class='listContainer')
				each item in items
					if !item.name.includes('recipe') && !item.name.includes('river')
						div(id='itemImageContainer' class='imgContainer')
							img(src='/images/'+item.name+'.png' class='image')
			div(id='itemDescription' class='detailContainer')
		